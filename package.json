{
  "name": "uma-musume-text-clone",
  "version": "0.1.0",
  "description": "A text-based horse racing simulation game inspired by Uma Musume Pretty Derby",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/launcher.js",
    "start:direct": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:balance": "cross-env NODE_ENV=test jest tests/balance --verbose",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:journeys": "cross-env NODE_ENV=test jest tests/journeys --verbose"
  },
  "keywords": [
    "game",
    "horse-racing",
    "terminal",
    "simulation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.89",
    "blessed": "^0.1.81",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "inquirer": "^9.2.11"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "jest-mock": "^29.7.0",
    "nodemon": "^3.0.1",
    "sinon": "^17.0.1",
    "supertest": "^6.3.4"
  }
}
