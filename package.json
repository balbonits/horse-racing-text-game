{
  "name": "horse-racing-text-game",
  "version": "0.1.0",
  "description": "A text-based horse racing simulation and training game",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/launcher.js",
    "start:direct": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:balance": "cross-env NODE_ENV=test jest tests/balance --verbose",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:journeys": "cross-env NODE_ENV=test jest tests/journeys --verbose",
    "wipe:saves": "node scripts/save-manager.js wipe",
    "save:list": "node scripts/save-manager.js list",
    "save:wipe": "node scripts/save-manager.js wipe",
    "save:wipe:all": "node scripts/save-manager.js wipe-all",
    "save:stats": "node scripts/save-manager.js stats",
    "save:validate": "node scripts/save-manager.js validate",
    "save:test": "node scripts/save-manager.js test",
    "save:help": "node scripts/save-manager.js help",
    "build:major": "node scripts/build.js major",
    "build:minor": "node scripts/build.js minor",
    "build:patch": "node scripts/build.js patch",
    "build:release": "node scripts/build.js release",
    "build:hotfix": "node scripts/build.js hotfix",
    "build:cleanup": "node scripts/build.js cleanup",
    "build:info": "node scripts/build.js info",
    "version:show": "node scripts/build.js info",
    "branches:cleanup": "node scripts/build.js cleanup",
    "docs:cleanup": "node scripts/docs-cleanup.js cleanup",
    "docs:list": "node scripts/docs-cleanup.js list",
    "docs:help": "node scripts/docs-cleanup.js help"
  },
  "keywords": [
    "game",
    "horse-racing",
    "terminal",
    "simulation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.89",
    "blessed": "^0.1.81",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "inquirer": "^9.2.11"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "jest-mock": "^29.7.0",
    "nodemon": "^3.0.1",
    "sinon": "^17.0.1",
    "supertest": "^6.3.4"
  }
}
